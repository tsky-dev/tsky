{
  "name": "tsky",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "license": "MIT",
  "homepage": "https://tsky.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsky-dev/tsky.git"
  },
  "scripts": {
    "dev": "pnpm run -r dev",
    "build": "pnpm run -r build",
    "prepare": "pnpm build",
    "docs:dev": "pnpm run --filter @tsky/docs dev",
    "docs:build": "pnpm run --filter @tsky/docs build",
    "docs:preview": "pnpm run --filter @tsky/docs preview",
    "format": "biome format",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check",
    "check:fix": "biome check --write .",
    "typecheck": "pnpm run -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "nano-staged": "^0.8.0"
  },
  "nano-staged": {
    "*.{js,ts,cjs,mjs,json}": ["biome check --write --"]
  }
}
